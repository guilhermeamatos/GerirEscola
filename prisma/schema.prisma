generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model School {
  id          String       @id @default(uuid())
  name        String
  address     String
  nivel       nivel
  phone       String
  email       String
  classes     Class[]
  manager     Manager[]
}

enum nivel {
  INFANTIL
  FUNDAMENTAL_1
  FUNDAMENTAL_2
  FUNDAMENTAL_1_2
  INFANTIL_FUNDAMENTAL_1
  INFANTIL_FUNDAMENTAL_1_2
}

model Class {
  id          String       @id @default(uuid())
  name        String
  school_year String
  school_id   String
  school      School      @relation(fields: [school_id], references: [id])
  teacher     Teacher?     @relation(fields: [teacher_id], references: [id])
  teacher_id  String?
  students    Student[]
}

model Teacher {
  id            String      @id @default(uuid())
  matricula    String?      @unique
  concursado   Boolean 
  name          String
  cpf           String      @unique
  address       String
  phone         String
  email         String      @unique
  password      String?
  specialization String
  classes       Class[]
}

model Student {
  id             String      @id @default(uuid())
  name           String
  birthdate      DateTime
  cpf            String      @unique
  address        String
  phone          String
  email          String
  class_id       String?
  class          Class?       @relation(fields: [class_id], references: [id])
}

model Coordinator {
  id         String      @id @default(uuid())
  name       String
  cpf        String      @unique
  address    String
  phone      String
  email      String      @unique
  password   String?
}

model Manager {
  id         String      @id @default(uuid())
  name       String
  cpf        String      @unique
  phone      String
  email      String      @unique
  password   String?
  school_id  String?     @unique
  school     School?      @relation(fields: [school_id], references: [id])
}