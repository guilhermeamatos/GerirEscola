generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model School {
  id          String       @id @default(uuid())
  name        String
  address     String
  nivel       nivel
  phone       String
  email       String
  classes     Class[]
  manager     Manager[]
  teachers    Teacher[]     @relation("TeacherSchool")
  students    Student[]
}

enum nivel {
  INFANTIL
  FUNDAMENTAL_1
  FUNDAMENTAL_2
  FUNDAMENTAL_1_2
  INFANTIL_FUNDAMENTAL_1
  INFANTIL_FUNDAMENTAL_1_2
}

model Class {
  id          String       @id @default(uuid())
  name        String
  nivel       nivelClass
  active      Boolean     @default(true)
  year        Int @default(2025)
  numberOfStudents Int
  school_year Int
  school_id   String
  teachers    TeacherClass[]
  school      School      @relation(fields: [school_id], references: [id])
  students    Student[]
  subjects    Subject[]
}
model Subject {
  id          String       @id @default(uuid())
  teacher_id  String?
  teacher     Teacher?    @relation(fields: [teacher_id], references: [id])
  class_id    String?
  class       Class?      @relation(fields: [class_id], references: [id])
  name        nameSubjects
  enrollments    Enrollment[]
  lessons       Lesson[]
}

model Enrollment {
  id           String    @id @default(uuid())
  student_id   String
  subject_id   String
  transfer     Boolean @default(true)
  gradesid     String?   @unique
  grade        Grades?    @relation(fields: [gradesid], references: [id])
  student      Student  @relation(fields: [student_id], references: [id])
  subject      Subject  @relation(fields: [subject_id], references: [id])
  lessons      EnrollmentLesson[]

  @@unique([student_id, subject_id]) 
}

model EnrollmentLesson {
  id            String      @id @default(uuid())
  enrollment_id String
  lesson_id     String
  present      Boolean     @default(true)
  enrollment    Enrollment  @relation(fields: [enrollment_id], references: [id])
  lesson        Lesson      @relation(fields: [lesson_id], references: [id])
  @@unique([enrollment_id, lesson_id])
}


model Lesson {
  id          String       @id @default(uuid())
  name        String
  dscreption  String?
  subject_id  String
  subject     Subject      @relation(fields: [subject_id], references: [id])
  presences  EnrollmentLesson[]
}

model Grades {
  id            String    @id @default(uuid())
  grade1_1      Float     @default(0)
  grade1_2      Float     @default(0)
  grade1_3      Float     @default(0)
  grade2_1      Float     @default(0)
  grade2_2      Float     @default(0)
  grade2_3      Float     @default(0)
  grade3_1      Float     @default(0)
  grade3_2      Float     @default(0)
  grade3_3      Float     @default(0)
  grade1_1Value Float     @default(0)
  grade1_2Value Float     @default(0)
  grade1_3Value Float     @default(0)
  grade2_1Value Float     @default(0)
  grade2_2Value Float     @default(0)
  grade2_3Value Float     @default(0)
  grade3_1Value Float     @default(0)
  grade3_2Value Float     @default(0)
  grade3_3Value Float     @default(0)
  grade1_rp     Float     @default(0)
  grade2_rp     Float     @default(0)
  grade3_rp     Float     @default(0)
  grade1_media  Float     @default(0)
  grade2_media  Float     @default(0)
  grade3_media  Float     @default(0)
  grade_final  Float     @default(0)
  id_enrollment String   @unique
  Enrollment    Enrollment?

}


enum nameSubjects{
  LINGUA_PORTUGUESA
  MATEMATICA
  CIENCIAS
  HISTORIA
  GEOGRAFIA
  ARTE
  EDUCACAO_FISICA
  ENSINO_RELIGIOSO
  INGLES
}

enum nivelClass {
  INFANTIL
  FUNDAMENTAL_1
  FUNDAMENTAL_2
}
model TeacherClass {
  id          String       @id @default(uuid())
  teacher_id  String
  teacher    Teacher     @relation(fields: [teacher_id], references: [id])
  class_id    String
  class       Class      @relation(fields: [class_id], references: [id])
}

model Teacher {
  id            String      @id @default(uuid())
  matricula     String?      @unique
  concursado    Boolean 
  name          String
  cpf           String      @unique
  address       String
  phone         String
  email         String      @unique
  password      String?
  subjects      Subject[]
  classes       TeacherClass[]
  specialization String
  schools       School[]     @relation("TeacherSchool")
}



model Student {
  id             String      @id @default(uuid())
  name           String
  matricula      String?      @unique
  birthdate      DateTime
  cpf            String?      @unique
  address        String?
  phone          String?
  email          String?
  school_year    Int
  password       String?
  class_id       String?
  class          Class?       @relation(fields: [class_id], references: [id])
  school_id      String
  school         School       @relation(fields: [school_id], references: [id])
  enrollments    Enrollment[]
}

model Coordinator {
  id         String      @id @default(uuid())
  name       String
  cpf        String      @unique
  address    String
  phone      String
  email      String      @unique
  password   String?
}

model Manager {
  id         String      @id @default(uuid())
  name       String
  cpf        String      @unique
  phone      String
  email      String      @unique
  password   String?
  school_id  String    
  school     School      @relation(fields: [school_id], references: [id])
}